<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h1>Create New Listing</h1>
    <form action="/listings" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a Trendy Title"
          class="form-control"
          id="title"
          required
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          type="text"
          placeholder="Near a Beautiful Beach Area"
          class="form-control"
          id="description"
        ></textarea>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="12-B Street, GOA"
          class="form-control"
          id="location"
          required
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="India"
            class="form-control"
            id="country"
            required
          />
        </div>

        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            placeholder="7999/-"
            class="form-control"
            id="price"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image Url</label>
        <input
          type="text"
          name="listing[image]"
          placeholder="https://YourImageLinkHere.com"
          class="form-control"
          id="image"
        />
      </div>

      <button class="btn btn-dark add-btn">Submit</button>
    </form>
  </div>
</div>
