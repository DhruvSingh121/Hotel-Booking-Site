<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h1>Edit Your Listing</h1>
    <form
      action="/listings/<%= listing._id %>?_method=PUT"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Title"
          id="title"
          class="form-control"
          value="<%= listing.title %>"
          required
        />
        <div class="invalid-feedback">Title Should be Valid</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          name="listing[description]"
          placeholder="Description"
          class="form-control"
          id="description"
          required
        >
<%= listing.description %></textarea
        >
        <div class="invalid-feedback">Description Should be Valid</div>
      </div>

      <div class="mb-3">
        <p>Original Listing Image</p>
        <img src="<%= originalImageUrl %>" alt="" />
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input
          type="file"
          name="listing[image][url]"
          placeholder="Image URL"
          class="form-control"
          id="image"
        />
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          type="number"
          name="listing[price]"
          placeholder="Price"
          class="form-control"
          value="<%= listing.price %>"
          id="price"
          required
        />
        <div class="invalid-feedback">Price Should be Valid</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Location"
          class="form-control"
          value="<%= listing.location %>"
          id="location"
          required
        />
        <div class="invalid-feedback">Location Should be Valid</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          name="listing[country]"
          placeholder="Country"
          class="form-control"
          value="<%= listing.country %>"
          id="country"
          required
        />
        <div class="invalid-feedback">Country Should be Valid</div>
      </div>
      <button class="btn btn-dark edit-btn mt-3">Submit</button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
